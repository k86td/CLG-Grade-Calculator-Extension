{
  "devDependencies": {
    "@types/chrome": "^0.0.171",
    "@types/jquery": "^3.5.10",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "jquery": "^3.6.0",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "prebuild": "rimraf export",
    "build": "tsc --build src/content-script && tsc --build src/settings",
    "postbuild": "npm run copy-static && npm run copy-base",
    "copy-static": "copyfiles -u 1 src/settings/*.html src/jquery* src/settings/*.css export",
    "copy-base": "copyfiles manifest.json images/* export"
  }
}
